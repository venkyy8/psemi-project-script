<UserControl x:Class="PE24103Control.UIControls.InputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300" MaxWidth="300"
             Background="White">
    <UserControl.Resources>
        <ResourceDictionary Source="..\Resources\Styles.xaml">
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="2">
        <Border BorderBrush="LightGray" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="35"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnEdit" Margin="0" Grid.Column="0" Background="#ececec" BorderThickness="0" Click="btnEdit_Click" Width="30">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Content" Value="..." />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsReadOnly}" Value="True">
                                    <Setter Property="Content" Value="" />
                                    <Setter Property="IsEnabled" Value="False" />
                                    <Setter Property="Visibility" Value="Hidden" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <TextBlock x:Name="txtDisplay" FontSize="12" Padding="0,1,0,0" HorizontalAlignment="Stretch" TextAlignment="Center" Grid.Column="1" Text="{Binding Display}" MinWidth="60"/>
                <TextBox x:Name="txtEdit" FontSize="12" Padding="0,0,0,0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Grid.Column="1" Background="#F8FFB0" Visibility="Hidden" KeyUp="txtEdit_KeyUp" LostFocus="txtEdit_LostFocus" PreviewTextInput="txtEdit_PreviewTextInput"/>
                <TextBlock x:Name="txtUnits" FontSize="12" Padding="0,1,0,0" HorizontalAlignment="Stretch" TextAlignment="Center" Grid.Column="2" Background="#ececec" Text="{Binding Units}"/>

            </Grid>
        </Border>
    </Grid>
</UserControl>
