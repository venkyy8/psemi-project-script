<Window x:Class="muRata.Views.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Splash"
        Height="275"
        Width="500"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
		WindowStyle="None"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        Background="{x:Null}">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="170"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <Image Grid.RowSpan="3"
               Grid.ColumnSpan="2"
               Stretch="None"
               Source="/muRataStudio;component/Images/SplashLogo-muRata.png" />
        
        <TextBlock Text="{Binding SplashScreenText}"
                   VerticalAlignment="Bottom"
                   FontSize="20" 
                   TextAlignment="Center"
                   FontStyle="Italic"
                   Grid.ColumnSpan="2" />
    </Grid>
</Window>
